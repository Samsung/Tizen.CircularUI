<?xml version="1.0" encoding="utf-8" ?>
<c:CirclePage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:c="clr-namespace:Tizen.Wearable.CircularUI.Forms;assembly=Tizen.Wearable.CircularUI.Forms"
             xmlns:chart="clr-namespace:Tizen.Wearable.CircularUI.Chart.Forms;assembly=Tizen.Wearable.CircularUI.Chart.Forms"
             xmlns:local="clr-namespace:CircularUIChartGallery.ViewModel"
             RotaryFocusObject="{x:Reference Scroller}"
             x:Class="CircularUIChartGallery.Pages.BarChartBarBackgroundColorTest">
    <c:CirclePage.BindingContext>
        <local:MainPageModel/>
    </c:CirclePage.BindingContext>
    <c:CirclePage.Content>
        <c:CircleScrollView x:Name="Scroller" Margin="0, 50, 0, 50">
            <StackLayout>
                <Label
                    Text="BG color from bar color"
                    FontSize="Micro"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Margin="0, 50, 0, 10"/>
                <chart:BarChartView
                    x:Name="defaultBarBG"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    ValueLabelIsVisible="True"
                    BarBackgroundColorIsVisible="True"
                    BarWidth="15"
                    Maximum ="10"
                    Minimum="0"
                    Data="{Binding ColorDummyData}"
                    AxisOption="{Binding MajorOnlyAxisOption}"
                    WidthRequest="300"
                    HeightRequest="200"/>
                <chart:BarChartView
                    x:Name="radiusBarBG"
                    Margin="0, 50, 0, 10"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    ValueLabelIsVisible="True"
                    BarBackgroundColorIsVisible="True"
                    BarTopRadius="7.5"
                    BarBottomRadius="7.5"
                    BarWidth="15"
                    Maximum ="10"
                    Minimum="0"
                    Data="{Binding ColorDummyData}"
                    AxisOption="{Binding CategoryOnlyAxisOption}"
                    WidthRequest="300"
                    HeightRequest="200"/>
                <Label
                    Text="BG color with bar bg color"
                    FontSize="Micro"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    Margin="0, 50, 0, 10"/>
                <chart:BarChartView
                    x:Name="radiusBar3"
                    VerticalOptions="CenterAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    ValueLabelIsVisible="True"
                    ValueLabelPosition="End"
                    BarBackgroundColorIsVisible="True"
                    BarTopRadius="7.5"
                    BarBottomRadius="7.5"
                    BarWidth="15"
                    Maximum ="10"
                    Minimum="0"
                    Data="{Binding BarBGColorDummyData}"
                    AxisOption="{Binding CategoryOnlyAxisOption}"
                    WidthRequest="300"
                    HeightRequest="200"/>
            </StackLayout>
        </c:CircleScrollView>
    </c:CirclePage.Content>
</c:CirclePage>
